<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/numbers_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/category_numbers"
    android:layout_height="wrap_content"
    android:drawSelectorOnTop="true">

    <ImageView
        android:id="@+id/number_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lanNumberTv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/lanNumberTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="One"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:paddingBottom="8dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/number_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/engNumberTv"/>

    <TextView
        android:id="@+id/engNumberTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="One"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/number_color"
        app:layout_constraintTop_toBottomOf="@+id/lanNumberTv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/category_numbers"
        android:src="@drawable/ic_play"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>